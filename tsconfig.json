{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node" // Add this if missing
    },
    "include": ["src/**/*"],       // Ensure this includes all src files
    "exclude": ["node_modules"]    // Exclude node_modules
  }